<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage"
             BackgroundColor="Black">
    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="175"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Text="0"
                   Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="5"
                   TextColor="White"
                   HorizontalTextAlignment="End"
                   VerticalTextAlignment="Center"
                   FontSize="75"
                   Margin="15,0"/>

            <Button Text="C"
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    BackgroundColor="DimGrey"
                    FontSize="25"
                    CornerRadius="1"
                    />

            <Button Text="DEL"
                    Grid.Row="1"
                    Grid.Column="2"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="/"
                    Grid.Row="1"
                    Grid.Column="3"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="Orange"/>

            <Button Text="7"
                    Grid.Row="2"
                    Grid.Column="0"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="8"
                    Grid.Row="2"
                    Grid.Column="1"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="9"
                    Grid.Row="2"
                    Grid.Column="2"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="X"
                    Grid.Row="2"
                    Grid.Column="3"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="Orange"/>
            
            <Button Text="4"
                    Grid.Row="3"
                    Grid.Column="0"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="5"
                    Grid.Row="3"
                    Grid.Column="1"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="6"
                    Grid.Row="3"
                    Grid.Column="2"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="-"
                    Grid.Row="3"
                    Grid.Column="3"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="Orange"/>
            
            <Button Text="1"
                    Grid.Row="4"
                    Grid.Column="0"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="2"
                    Grid.Row="4"
                    Grid.Column="1"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="3"
                    Grid.Row="4"
                    Grid.Column="2"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="+"
                    Grid.Row="4"
                    Grid.Column="3"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="Orange"/>
            
            <Button Text="0"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="."
                    Grid.Row="5"
                    Grid.Column="2"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="DimGrey"/>

            <Button Text="="
                    Grid.Row="5"
                    Grid.Column="3"
                    FontSize="25"
                    CornerRadius="1"
                    BackgroundColor="Orange"/>
        </Grid>

    </StackLayout>
</ContentPage>
